generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [postgis, fuzzystrmatch, postgis_topology, postgis_raster]
}

model User {
  usr_id         Int          @id @default(autoincrement())
  usr_google_id  String       @unique
  usr_avatar     String?
  usr_firstname  String
  usr_lastname   String?
  usr_email      String?      @unique
  usr_role_name  UserRoleEnum @default(SALES)
  usr_phone      String?      @default("")
  usr_is_active  Boolean      @default(true)
  usr_created_at DateTime?    @default(now())
  usr_update_at  DateTime?    @updatedAt
  usr_del        Int?         @default(0)
}

enum UserRoleEnum {
  CEO
  SALES
  SALES_SUPERVISOR
  ADMIN
}

model Location {
  loc_id          Int    @id @unique @default(autoincrement())
  loc_name        String
  loc_lat         Float
  loc_long        Float
  loc_address     String
  loc_postcode    String
  loc_subdistrict String
  loc_district    String
  loc_province    String
  loc_geojson     Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String   @default("system")
  updatedBy String   @default("system")
}
